<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.het.udp">

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <!--android:hardwareAccelerated="false"-->
    <application >
        <service
            android:name="com.het.udp.core.UdpService"
            android:enabled="true"
            android:exported="true"
            android:persistent="true"
            android:process=":udpservice">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.UdpService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <service
            android:name="com.het.udp.core.UdpService_v2"
            android:enabled="true"
            android:exported="true"
            android:process=":udpservice_v2">
            <intent-filter>
                <action android:name="android.intent.action.UdpService_v2" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <receiver android:name="com.het.udp.core.broadcast.NetWorkBroadcast">
            <intent-filter>
                <action android:name="android.intent.action.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.WIFI_STATE_CHANGED" />
                <action android:name="android.intent.action.STATE_CHANGE" />
                <action android:name="android.net.wifi.STATE_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
